# =============================================================================
# Vector Database Configuration
# =============================================================================
MILVUS_URI=http://milvus:19530
COLLECTION_NAME=k8s_docs
# VECTOR_DIM must align with embedding model dimension
VECTOR_DIM=512

# =============================================================================
# LLM Configuration
# =============================================================================
# Deepseek Configuration
# LLM_API_KEY=your_deepseek_api_key
# LLM_BASE_URL=https://api.deepseek.com/v1
# LLM_MODEL=deepseek-chat

# Qwen Configuration
LLM_API_KEY=your_qwen_api_key
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# https://dashscope.aliyuncs.com/api/v1
LLM_MODEL=qwen-plus

# OpenAI Configuration
# LLM_API_KEY=your_openai_api_key
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-3.5-turbo

# =============================================================================
# Embedding Model Configuration
# =============================================================================
EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
EMBEDDING_DEVICE=cuda
EMBEDDING_BACKEND=onnx

HF_MIRROR_BASE_URL=https://hf-mirror.com
HF_OFFLINE=false
EMBEDDING_LOCAL_DIR=

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=K8s Assistant
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# =============================================================================
# Data Processing Configuration
# =============================================================================
DOCS_DIR=./docs
CHUNK_SIZE=1024
CHUNK_OVERLAP=100
MAX_TOKENS=4096
TEMPERATURE=0.7

# =============================================================================
# NLTK Configuration
# =============================================================================
NLTK_DATA=/root/miniconda3/envs/cuda12.3-env/lib/nltk_data

# =============================================================================
# Elastic Search Configuration
# =============================================================================
ELASTICSEARCH_HOST=https://localhost:9200
ELASTICSEARCH_INDEX=k8s-docs
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_CA_CERTS=

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
